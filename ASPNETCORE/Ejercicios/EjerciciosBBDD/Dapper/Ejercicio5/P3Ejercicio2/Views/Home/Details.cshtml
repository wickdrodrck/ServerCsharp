@model ModeloListaId
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Información Alumno</h1>
<br />
<br />
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Detalles</h4>
        <h5 class="card-subtitle mb-2 text-muted">Datos del alumno seleccionado</h5>
        <br />
        <ul class="list-group list-group-flush">
            <li class="list-group-item">DNI: @Model.alumno.DNI</li>
            <li class="list-group-item">Nombre: @Model.alumno.Nombre</li>
            <li class="list-group-item">Apellidos: @Model.alumno.Apellidos</li>
            <li class="list-group-item">Teléfono: @Model.alumno.Telefono</li>
            <li class="list-group-item">Curso: @Model.alumno.Curso</li>
            <li class="list-group-item">Edad: @Model.alumno.Edad</li>
        </ul>
        <br /><br />
        <form asp-action="Index" asp-controller="Home" method="post">
            <input type="hidden" name="codigo" value="@Model.curso" />
            <button type="submit" class="btn btn-link">Volver</button>
        </form>

    </div>
</div>
