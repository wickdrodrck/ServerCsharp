@model ModeloListaAlumnosCurso

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="jumbotron">
    <br />
    <h1>Listado de alumnos de @Model.curso.nombre</h1><br />
    <table class="table">

        <thead>
            <tr>
                <th scope="col">NOMBRE</th>
                <th scope="col">APELLIDOS</th>
                <th scope="col">TELÉFONO</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @{
                int id = 1;
                if (Model != null)
                {
                    foreach (var item in Model.alumnos)
                    {
                        <tr>
                            <td>@item.Nombre</td>
                            <td>@item.Apellidos</td>
                            <td>@item.Telefono</td>
                            <td></td>
                            <td>
                                <form asp-action="Details" asp-controller="Home" method="post">
                                    <input type="hidden" name="id" value="@id" />
                                    <input type="hidden" name="curso" value="@Model.curso.codigo" />
                                    <button type="submit" class="btn btn-link">Ver</button>
                                </form>
                            </td>
                        </tr>
                        id++;
                    }

                }
            }
        </tbody>

    </table>
</div>
