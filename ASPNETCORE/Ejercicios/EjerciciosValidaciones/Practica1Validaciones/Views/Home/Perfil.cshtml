@model PerfilViewModel

@{
    ViewData["Title"] = "Perfil";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <style>
        /* Estilos para la página de perfil si es necesario */
    </style>
</head>
<body>
    <h2>Perfil del Usuario</h2>

    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Edad:</strong> @Model.Edad</p>
    <p><strong>Sexo:</strong> @Model.Sexo</p>
    <p><strong>Temas de interés:</strong> @Model.Interes</p>

    <p><strong>Aficiones:</strong></p>
    <ul>
        @foreach (var aficion in Model.Aficiones)
        {
            <li>@aficion</li>
        }
    </ul>
</body>
</html>

